<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Books</title>
<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding: 20px;
    background: #f7f7f7;
  }
.add-btn {
  background-color: #007bff;
  color: white;
  padding: 6px 12px;
  text-decoration: none;
  border-radius: 4px;
  margin-left: 10px;
  font-size: 0.9rem;
}

.add-btn:hover {
  background-color: #0056b3;
}

  .topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .user-info {
    font-size: 0.95rem;
    margin-bottom: 5px;
  }

  .logout-btn, .login-btn, .add-btn {
    background-color: #333;
    color: white;
    padding: 6px 12px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.9rem;
    margin-left: 10px;
  }

  .add-btn {
    background-color: #007bff;
  }

  .books-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    width: 220px;
    transition: transform 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .card-body {
    padding: 12px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
.user-box {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.user-name, .user-role {
  background-color: #f1f1f1;
  padding: 6px 10px;
  border-radius: 6px;
  font-size: 0.9rem;
  color: #333;
}

.dashboard-btn, .add-btn {
  background-color: #007bff;
  color: white;
  padding: 6px 12px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 0.9rem;
}

.dashboard-btn:hover, .add-btn:hover {
  background-color: #0056b3;
}

  .card-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin-bottom: 6px;
  }

  .card-text {
    font-size: 0.95rem;
    color: #444;
    margin-bottom: 6px;
  }

  .text-muted {
    font-size: 0.85rem;
    color: #777;
    margin-bottom: 10px;
  }

  .buy-btn {
    background: #28a745;
    color: white;
    border: none;
    padding: 10px;
    width: 100%;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    margin-top: auto;
  }

  .buy-btn:hover {
    background: #218838;
  }

  @media (max-width: 500px) {
    .card {
      width: 100%;
    }
  }
</style>

</head>
<body>

<div class="topbar">
  <h2>BookNest</h2>
  <div>
   <div class="user-box">
  <span class="user-name">üë§ <strong><%= user.name %></strong></span>
  <span class="user-role">üõ°Ô∏è Role: <%= user.role %></span>

  <% if (user.role === 'admin') { %>
    <a href="/admin/dashboard" class="dashboard-btn">Dashboard</a>
  <% } %>
  
  <% if (user.role === 'seller') { %>
    <a href="/books/add" class="add-btn">+ Add Book</a>
  <% } %>

  <a href="/logout" class="logout-btn">Logout</a>
</div>

  </div>
</div>


  <div class="books-grid">
    <% books.forEach(book => { %>
      <div class="card">
        <img src="<%= book.imageUrl %>" alt="Book Cover" />
        <div class="card-body">
          <div>
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text">By <%= book.author %> | ‚Çπ<%= book.price %></p>
            <% if (book.sellerId) { %>
              <p class="text-muted">Seller: <%= book.sellerId.name %></p>
            <% } %>
          </div>
          <% if (user && user.role === 'user') { %>
            <form method="POST" action="/orders/buy/<%= book._id %>">
              <button type="submit" class="buy-btn">Buy Now</button>
            </form>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
